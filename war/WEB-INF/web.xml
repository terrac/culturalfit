<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.BasicServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/culturalfit/greet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>employerServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.EmployerImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>employerServlet</servlet-name>
		<url-pattern>/culturalfit/employer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>suggestServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.SuggestServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>suggestServlet</servlet-name>
		<url-pattern>/culturalfit/suggest</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.AdminServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>/culturalfit/admin</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>cServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.ConsoleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>cServlet</servlet-name>
		<url-pattern>/culturalfit/console</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>mainServlet</servlet-name>
		<servlet-class>com.caines.cultural.server.MainServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>mainServlet</servlet-name>
		<url-pattern>/c/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	    <servlet>
        <servlet-name>LoginRequiredServlet</servlet-name>
        <servlet-class>com.caines.cultural.server.LoginPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginRequiredServlet</servlet-name>
        <url-pattern>/loginRequired</url-pattern>
    </servlet-mapping>
	
    <servlet>
        <servlet-name>LoginSendServlet</servlet-name>
        <servlet-class>com.caines.cultural.server.LoginSubmit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginSendServlet</servlet-name>
        <url-pattern>/loginSubmit</url-pattern>
    </servlet-mapping>
    
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>welcome.html</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>all</web-resource-name>
			<url-pattern>/loginRequired/google</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
</web-app>
